@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.4/xlsx.full.min.js"></script>


<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.dataTables.min.css">

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h1 class="m-0">Enrollment Data</h1>
                </div>
                <div class="datePickers d-flex justify-content-between p-1">
                    <div class="startDate">
                        <label for="inputStartDate">Start Date</label>
                        <input id="inputStartDate" type="date" asp-format="{0:yyyy-MM-dd}" />


                        <label for="inputEndDate">End Date</label>
                        <input id="inputEndDate" type="date" asp-format="{0:yyyy-MM-dd}" />
                        <button formaction="Enrollment">Go</button>

                    </div>

                    <div>
                        <button id="buttonpdf" class="btn btn-outline-danger">Generate PDF</button>
                        <button class="btn" id="excelbtn" style="border: 1px solid #000;"> Excel</button>

                    </div>
                </div>

                <table class="table table-striped table-bordered" id="dtable">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Customer Id</th>
                            <th>Uniquie Id</th>
                            <th>Enrollment Id</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Enrolldata in Model)
                        {
                            <tr>
                                <td>@Enrolldata.date</td>
                                <td>@Enrolldata.Customer_Id</td>
                                <td>@Enrolldata.Uniqueid</td>
                                <td>@Enrolldata.EnrollmentId</td>

                            </tr>
                        }
                    </tbody>


                </table>
            </div>
        </div>
    </div>
</div>

